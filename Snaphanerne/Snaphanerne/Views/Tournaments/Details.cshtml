@model Snaphanerne.Models.Entity.Tournament

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <table class="table">
        <tr>
            <h4>Tournament</h4>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
        </tr>
    </table>
    
    <table class="table">
        <th>
            <h4>@Html.DisplayNameFor(model => model.Matches)</h4>
        </th>
        
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matches.FirstOrDefault().ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matches.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matches.FirstOrDefault().Prepare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matches.FirstOrDefault().Opponent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matches.FirstOrDefault().MatchSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matches.FirstOrDefault().Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matches.FirstOrDefault().End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matches.FirstOrDefault().OtherInformation)
            </th>
        </tr>
        @foreach (var model in Model.Matches)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => model.ID)</td>
                <td>@Html.DisplayFor(modelItem => model.Name)</td>
                <td>@Html.DisplayFor(modelItem => model.Prepare)</td>
                <td>@Html.DisplayFor(modelItem => model.Opponent)</td>
                <td>@Html.DisplayFor(modelItem => model.MatchSize)</td>
                <td>@Html.DropDownListFor(modelItem => model.MatchSize, ViewBag.SizeSelectList as List<SelectListItem>, "<-- Team Size -->")</td>
                <td>@Html.DisplayFor(modelItem => model.Start)</td>
                <td>@Html.DisplayFor(modelItem => model.End)</td>
                <td>@Html.DisplayFor(modelItem => model.OtherInformation)</td>
                <td>@Html.DisplayFor(modelItem => model.ID)</td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
